{
  "name": "kanna-diary",
  "version": "1.0.0",
  "description": "Kanna's Autonomous Diary System - Daily diary generation with reflection, emotion tracking, and improvement goals",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "preview": "node index.js --preview",
    "test": "node test.js",
    "test:sentiment": "ts-node tests/sentiment-analyzer.test.ts",
    "test:generator": "ts-node tests/generator.test.ts",
    "test:all": "ts-node tests/sentiment-analyzer.test.ts && ts-node tests/generator.test.ts",
    "test:jest": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "generate:weekly": "npx ts-node --transpile-only src/WeeklyReflection.ts",
    "generate:monthly": "npx ts-node --transpile-only src/MonthlyReflection.ts"
  },
  "keywords": [
    "diary",
    "reflection",
    "emotion",
    "improvement",
    "kanna",
    "autonomous",
    "ai",
    "glm-4.7"
  ],
  "author": "Kanna",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^8.57.1",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  }
}
